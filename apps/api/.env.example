# AI API Configuration
# Use either OpenAI API key OR Gemini API key (Gemini is OpenAI-compatible)
OPENAI_API_KEY=your_openai_api_key_here
# OR
GEMINI_API_KEY=your_gemini_api_key_here

# Database (Neon Serverless PostgreSQL)
NEON_CONNECTION_STRING=postgresql://user:password@host/database?sslmode=require

# Vector Store (Qdrant Cloud)
QDRANT_URL=https://your-cluster.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key

# Authentication (BetterAuth with GitHub OAuth)
BETTER_AUTH_GITHUB_CLIENT_ID=your_github_client_id
BETTER_AUTH_GITHUB_CLIENT_SECRET=your_github_client_secret
JWT_SECRET=your_jwt_secret_key_min_32_chars

# Environment
ENVIRONMENT=production

# API and Frontend URLs (for OAuth callbacks)
API_URL=https://your-api.vercel.app
FRONTEND_URL=https://your-frontend.vercel.app
