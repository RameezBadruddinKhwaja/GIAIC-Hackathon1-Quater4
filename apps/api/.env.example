# AI API Configuration
# Use either OpenAI API key OR Gemini API key (Gemini is OpenAI-compatible)
OPENAI_API_KEY=your_openai_api_key_here
# OR
GEMINI_API_KEY=your_gemini_api_key_here

# Database (Neon Serverless PostgreSQL)
NEON_CONNECTION_STRING=postgresql://user:password@host/database?sslmode=require

# Vector Store (Qdrant Cloud)
QDRANT_URL=https://your-cluster.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key

# Authentication (JWT)
# Generate a secure secret key with: openssl rand -hex 32
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_characters_recommended

# Environment
ENVIRONMENT=production
